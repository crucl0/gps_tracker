<center>
<form action="${request.route_url('main')}" method="post">
    <table border="0" width="40%">
        <tr>
            <td bgcolor="#cfc" rowspan="1" align="center">Points in database:</td>
            <td>Gas station:</td>
            <td><input type="text" maxlength="100" name="gas_station"></td>
        </tr>
        <tr>
            <td bgcolor="#cfc" rowspan="6" align="center"><a href="${request.route_url('points')}"><h1>${request.db.points.count()}</h1></a></td>
        </tr>
        <tr>
            <td>Odometer:</td>
            <td><input type="number" maxlength="8" name="odometer"></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><input type="text" maxlength="200" name="description"></td>
        </tr>
        <tr>
            <td>Coord. latitude:</td>
            <td><input type="text" maxlength="6" name="latitude"></td>
        </tr>
        <tr>
            <td>Coord. longitude:</td>
            <td><input type="text" maxlength="6" name="longitude"></td>
        </tr>
        <tr>
            <td colspan="2" align="center"><input type="submit" name="add" value="Add new point" class="button"></td>
        </tr>
    </table>
</form>
</center>